<header>
    <nav>
        <%= link_to image_tag("logo"), root_path %>
        <ul class="left">
          <li>
            <%= link_to 'All Movies', movies_path %>
          </li>
        </ul>
        <ul class="right">
        <% if Current.user %>
          <li>
            <%= link_to Current.user.name, Current.user %>
          </li>
          <li>
            <%= link_to "Account Settings", edit_user_path(Current.user) %>
          </li>
          <li>
            <%= link_to "Sign Out", session_path, method: :delete, class: "button" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Log In", login_path, class:"button" %>
          </li>
          <li>
            <%= link_to "Sign Up", signup_path, class:"button" %>
          </li>
        <% end %>
        </ul>
    </nav>
</header>