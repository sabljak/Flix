<div data-controller="infinite-scroll">
  <div data-infinite-scroll-target="entries">
    <%= render 'movies/movies', movies: @movies %>
  </div>
  <div class="lds-roller" id="loading-spinner">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
  </div>
  <div style="display: none" data-infinite-scroll-target="pagination">
    <%= will_paginate @movies %>
  </div>
</div>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add New Movie", new_movie_path(@movie), class: "button" %>
  </section>
<% end %>

